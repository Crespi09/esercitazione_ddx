{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug NestJS",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/src/main.ts",
            "args": [],
            "runtimeArgs": [
                "-r",
                "ts-node/register",
                "-r",
                "tsconfig-paths/register"
            ],
            "sourceMaps": true,
            "envFile": "${workspaceFolder}/.env",
            "console": "integratedTerminal",
            "restart": true,
            "protocol": "inspector"
        }
    ]
}